<!DOCTYPE html>
  <html lang="en">
    <head>
      <% include ./header %>
    </head>

    <h1 class="users_profile">Active users</h1>

    <table class="highlight responsive-table bordered centered users_view">
        <thead class="center-align">
          <tr>
              <th>Name</th>
              <th>User Name</th>
              <th>Delete</th>

          </tr>
        </thead>
        <tbody class="center-align">
            <tr>

          <%if(thisUser.is_admin){%>
            <%for(var i=0; i<users.length; i++){%>

            <td><a href="/users/<%=users.id%>"><%=users[i].full_name%></td>
            <td><%=users[i].user_name%></td>
            <td>
              <form class="" action="/users/<%=users[i].id%>/?_method=DELETE" method="POST">
                 <button class="delete btn btn-danger" type='submit'><i class="fa fa-trash-o fa-lg">Delete</i></button>
               </form>
            </td>


              </tr>
              <%}%>

            <%}else{%><h1>This is for admins only</h1>

            <%}%>



        </tbody>
      </table>


         </div>



  <footer>
    <% include ./footer %>
  </footer>

  </body>
</html>
