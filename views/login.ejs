<header id="navigation" class="navbar-inverse navbar-fixed-top animated-header">
  <div class="container">
    <div class="navbar-header scrollContainer destination0">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

          <h1 class="logoName">PuppyLink</h1>
            </div>


<%# -------------------------------%>
<%# main nav %>
<%# -------------------------------%>


    <nav class="collapse navbar-collapse navbar-right" role="navigation">
        <ul id="nav" class="nav navbar-nav">
          <li class="nav-item"><a class= "navbar-link" href="/">Home</a></li>
          <li class="nav-item"><a class="navbar-link" href="#aboutUs">About us</a></li>
          <li class="nav-item"><a class="navbar-link" href="/newUser">New Users</a></li>
          <li class="nav-item"><a class="navbar-link support transition" href="#contactIndex">Contact Us</a></li>
