<!DOCTYPE html>
  <html lang="en">
    <head>
      <% include ./header %>
    </head>

<h1 class="login-title">Login</h1>
  <div class="row newUser center-align">
      <form class="login-form col s12 form" action="/login" method="POST">
        <%# <div class="row">%>

              <div class="row">
                <div class="input-field col s6 offset-s3">
                    <label for="user_name"><i class="material-icons">account_circle</i>  User Name</label>
                      <input placeholder="Username" id="user_name" type="text" class="validate" name="user_name">
                </div>
              </div>


              <div class="row">
                <div class="input-field col s6 offset-s3">
                  <label for="password"><i class="material-icons">lock</i>  Password</label>
                  <input placeholder="password" id="password" type="password" class="validate" name="password">
                </div>
              </div>

              <button class="btn waves-effect waves-light newUserButton newuser-icon indigo darken-4" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>

                 <h5>Or</h5>
                  <a href="/auth/facebook" class="waves-effect waves-light btn indigo darken-4">
                    Login with facebook <i class="large material-icons">thumb_up</i>
                  </a>


              </form>
            </div>

            <footer>
              <% include ./footer %>
            </footer>
  </body>
</html>
